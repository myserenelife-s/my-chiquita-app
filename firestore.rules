rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Chat messages - authenticated users only
    match /chat_messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // User tokens for push notifications
    match /user_tokens/{tokenId} {
      allow read, write: if request.auth != null;
    }
    
    // Push notification queue
    match /push_notifications/{notificationId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null;
      allow delete: if false; // Only Cloud Functions can delete
    }
    
    // Period data
    match /period_data/{periodId} {
      allow read, write: if request.auth != null;
    }
    
    // Dhikr counter
    match /user_data/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Gratitude entries
    match /gratitude/{entryId} {
      allow read, write: if request.auth != null;
    }
  }
}
